    <script>
        let yesScale = 1; // Evet butonunun boyutu
        let noScale = 1;  // HayÄ±r butonunun boyutu
        const texts = ["Emin misin?", "Yapma be...", "KayÄ±boluyorum!", "Kalbim kÄ±rÄ±lÄ±r...", "Peki..."];
        let textIndex = 0;

        function hayiraBastikca() {
            const yesBtn = document.getElementById('yesBtn');
            const noBtn = document.getElementById('noBtn');

            // HayÄ±r butonunu kÃ¼Ã§Ã¼lt
            noScale -= 0.2;
            noBtn.style.transform = `scale(${noScale})`;
            
            // Evet butonunu bÃ¼yÃ¼t
            yesScale += 0.4; // HayÄ±r'dan daha hÄ±zlÄ± bÃ¼yÃ¼sÃ¼n
            yesBtn.style.transform = `scale(${yesScale})`;

            // HayÄ±r butonu yazÄ±sÄ±nÄ± deÄŸiÅŸtir (Ä°steÄŸe baÄŸlÄ±)
            if(textIndex < texts.length) {
                noBtn.innerText = texts[textIndex];
                textIndex++;
            }

            // EÄŸer hayÄ±r butonu Ã§ok kÃ¼Ã§Ã¼ldÃ¼yse yok et
            if (noScale <= 0.2) {
                noBtn.style.display = 'none';
                yesBtn.style.fontSize = "2rem"; // YazÄ±yÄ± da bÃ¼yÃ¼t
                yesBtn.innerText = "MECBUR EVET DÄ°YECEKSÄ°N â¤ï¸";
            }
        }

        function affetti() {
            document.getElementById('mainText').innerHTML = "Beni Ã‡ok Mutlu Ettin KarÄ±cÄ±m! ğŸ’–";
            document.getElementById('subText').innerHTML = "Seni dÃ¼nyalar kadar seviyorum!";
            
            // Mutlu GIF
            document.getElementById('gifArea').innerHTML = '<img src="https://media.giphy.com/media/26BRv0ThflsHCqDrG/giphy.gif" alt="Mutlu">';
            
            // ButonlarÄ± kaldÄ±r
            document.querySelector('.btn-group').style.display = 'none';

            // Konfeti patlat
            createConfetti();
        }

        function createConfetti() {
            const colors = ['#ff4d4d', '#ff9a9e', '#fad0c4', '#ffecd2'];
            setInterval(() => {
                const confetti = document.createElement('div');
                confetti.classList.add('confetti');
                confetti.style.left = Math.random() * 100 + 'vw';
                confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                confetti.style.animationDuration = Math.random() * 3 + 2 + 's';
                document.body.appendChild(confetti);
                setTimeout(() => confetti.remove(), 5000);
            }, 100);
        }
    </script>
